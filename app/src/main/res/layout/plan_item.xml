<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/realwhite"
    android:layout_width="175dp"
    android:layout_height="200dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/plan_item_pic"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:transitionName="@string/image_transition"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/item_good"
        />
    <TextView
        android:id="@+id/plan_item_name"
        android:text="箭牌糖果口香糖益达冰凉薄荷味木糖醇无糖56g零食"
        android:singleLine="false"
        android:textColor="@color/primaryText"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <LinearLayout
        android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/plan_storage"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="1000库存"
                android:layout_weight="1"
                android:textColor="@color/secondText"
                />
            <TextView
                android:id="@+id/plan_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/my_colorAccent"
                android:text="￥10.0"
                android:layout_weight="2"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/plan_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_plan_not_to_buy"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</LinearLayout>
