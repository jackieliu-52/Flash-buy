<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blue_semi_transparent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_pic"
        android:layout_width="170dp"
        android:layout_height="160dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/item_good"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/item_star"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/ic_not_interested"/>
        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="商品名称啊啊啊"
            android:layout_weight="6"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_price"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="价格"
            android:layout_weight="3"
            android:gravity="center"/>


        <TextView
            android:id="@+id/item_discount"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="折扣"
            android:layout_weight="3"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
